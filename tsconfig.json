{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "outDir": "transpiled/",
      "strict": true,
      "sourceMap": true,
      "declaration": false,
      // "module": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": ["node","jest","mocha"]
    },
      "exclude": [
        "node_modules",
        "typescript"
      ],
      "lib": [
        "es2018",
        "dom"
      ]
    }
